{
  "extends": "tsconfig/react-library.json",
  "include": [
    "src",
    "@types"
  ],
  "exclude": [
    "dist",
    "build",
    "node_modules",
  ],
  "compilerOptions": {
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "declaration": true,
    "declarationDir": "dist/types",
    "emitDeclarationOnly": true,
    "sourceMap": true
  }
}